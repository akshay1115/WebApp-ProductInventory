<% include partials/header %>


<!-- This page shows the complete information of particular product -->
<div class="container">
  <h1 class="display-4">
    <%= product.title %><small class="text-muted">
      datailed information</small
    >
  </h1>

  <!-- Carousel that showcases images in a slideshow -->
  <div
    id="carouselExampleIndicators"
    class="carousel slide w-75"
    data-ride="carousel"
  >
    <ol class="carousel-indicators">
      <li
        data-target="#carouselExampleIndicators"
        data-slide-to="0"
        class="active"
      ></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
      <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner">
      <div class="carousel-item active">
        <img
          src="<%= product.images %>"
          class="d-block w-100 img-thumbnail"
          alt="..."
        />
      </div>
      <div class="carousel-item">
        <img
          src="<%= product.images %>"
          class="d-block w-100 img-thumbnail"
          alt="..."
        />
      </div>
      <div class="carousel-item">
        <img
          src="<%= product.images %>"
          class="d-block w-100 img-thumbnail"
          alt="..."
        />
      </div>
    </div>
    <a
      class="carousel-control-prev"
      href="#carouselExampleControls"
      role="button"
      data-slide="prev"
    >
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="sr-only">Previous</span>
    </a>
    <a
      class="carousel-control-next"
      href="#carouselExampleControls"
      role="button"
      data-slide="next"
    >
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="sr-only">Next</span>
    </a>
  </div>

  <!-- Card- a new way of representing information about a product -->
  <div class="card" style="width: 55rem;">
    <div class="card-body">
      <h3 class="card-title"><strong> Brand: <%= product.brand %></strong></h3>
      <p class="card-text">This product is currenly <span>In Stock</span></p>
    </div>
    <ul class="list-group list-group-flush">
      <li class="list-group-item">Model Number: <%= product.modelNumber %></li>
      <li class="list-group-item">Condition: <%= product.condition %></li>
      <li class="list-group-item">Quantity left: <%= product.quantity %></li>
      <li class="list-group-item">Price: $<%= product.sellingPrice %></li>
      <li class="list-group-item">Location: <%= product.location %></li>
    </ul>
    <div class="card-body">
      <a
        href="/products/<%= product._id %>/edit"
        class="card-link btn btn-secondary btnPos"
        ><strong>Edit Info</strong>
      </a>
      <form action="/products/<%= product._id %>?_method=DELETE" method="POST">
        <button type="submit" id="dlt" class="btn btn-danger btnPos"><strong>Delete</strong></button>
      </form>
      </a>
    </div>
  </div>

  <!-- Dropdown for Description, toggles on and off -->
  <div class="accordion" id="accordionExample">
    <div class="card">
      <div class="card-header" id="headingOne">
        <h2 class="mb-0">
          <button
            class="btn btn-outline-info"
            type="button"
            data-toggle="collapse"
            data-target="#collapseOne"
            aria-expanded="true"
            aria-controls="collapseOne"
          >
            Description about product
          </button>
        </h2>
      </div>

      <div
        id="collapseOne"
        class="collapse show"
        aria-labelledby="headingOne"
        data-parent="#accordionExample"
      >
        <div class="card-body">
          <ul>
            <li><%= product.description %></li>
            <li>Dimension: <%= product.dimension %></li>
            <li>Weight: <%= product.weight %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
<!-- Dropdown for Payment Info, toggles on and off -->
  <div class="accordion" id="accordionExample">
    <div class="card">
      <div class="card-header" id="headingOne">
        <h2 class="mb-0">
          <button
            class="btn btn-outline-info"
            type="button"
            data-toggle="collapse"
            data-target="#collapseOne"
            aria-expanded="true"
            aria-controls="collapseOne"
          >
            Payment Information
          </button>
        </h2>
      </div>

      <div
        id="collapseOne"
        class="collapse show"
        aria-labelledby="headingOne"
        data-parent="#accordionExample"
      >
        <div class="card-body">
          <ul>
            <li>Payment Method: <%= product.paymentMethod %></li>
            <li>Transaction Details: <%= product.transactionDetails %></li>
            <li>Amount Received: <%= product.amountReceived %></li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

<% include partials/footer %>
